<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".HomeActivity"
        android:background="@color/white"
>
    
    <androidx.appcompat.widget.Toolbar android:layout_width="match_parent"
                                       android:layout_height="50dp"
                                       app:layout_constraintStart_toStartOf="parent"
                                       app:layout_constraintTop_toTopOf="parent"
                                       android:background="@color/whiteish"
                                       android:elevation="4dp"
                                       android:id="@+id/toolbar"
    >
        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                           android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:textSize="19sp"
                      app:layout_constraintLeft_toLeftOf="parent"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintBottom_toBottomOf="parent"
                      android:text="Kurumbus"
                      android:textColor="@color/black"
            />
            
            <ImageView android:layout_width="50dp"
                       android:layout_height="50dp"
                       android:padding="10dp"
                       app:layout_constraintTop_toTopOf="parent"
                       app:layout_constraintRight_toRightOf="parent"
                       android:src="@drawable/ic_more"
            />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.appcompat.widget.Toolbar>
    
    <de.hdodenhof.circleimageview.CircleImageView
               android:layout_width="0dp"
               android:layout_height="0dp"
               app:layout_constraintDimensionRatio="1:1"
               android:src="@drawable/android_picture"
               app:layout_constraintTop_toBottomOf="@id/toolbar"
               android:id="@+id/profile_image"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toStartOf="@id/edit_profile_button"
               app:layout_constraintHorizontal_weight="2"
               android:layout_marginStart="15dp"
               android:layout_marginTop="15dp"
               android:layout_marginEnd="15dp"
               app:civ_border_color="@color/grey"
               app:civ_border_width="1dp"

    />

    <TextView
            android:text="50"
            style="@style/profile_text_count"
            tools:layout_editor_absoluteY="65dp"
            tools:layout_editor_absoluteX="134dp" android:id="@+id/posts_count_text"/>
    <TextView
            android:text="posts"
            style="@style/profile_text" tools:layout_editor_absoluteY="102dp"
            tools:layout_editor_absoluteX="134dp" android:id="@+id/posts_text"/>
    <TextView
            android:text="100"
            style="@style/profile_text_count" tools:layout_editor_absoluteY="65dp"
            tools:layout_editor_absoluteX="240dp" android:id="@+id/followers_count_text"/>
    <TextView
            android:text="followers"
            style="@style/profile_text" tools:layout_editor_absoluteY="101dp"
            tools:layout_editor_absoluteX="240dp" android:id="@+id/followers_text"/>
    <TextView
            android:text="200"
            style="@style/profile_text_count" tools:layout_editor_absoluteY="65dp"
            tools:layout_editor_absoluteX="335dp" android:id="@+id/following_count_text"/>
    <TextView
            android:text="following"
            style="@style/profile_text" tools:layout_editor_absoluteY="100dp"
            tools:layout_editor_absoluteX="334dp" android:id="@+id/following_text"/>
    
    <Button android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="0dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:id="@+id/edit_profile_button"
            app:layout_constraintBottom_toBottomOf="@id/profile_image"
            app:layout_constraintStart_toEndOf="@id/profile_image"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Edit Profile"
            android:textSize="14sp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/button_bg"
            app:layout_constraintHorizontal_weight="5"
    />

    <com.ittianyu.bottomnavigationviewex.BottomNavigationViewEx android:layout_width="match_parent"
                                                                android:id="@+id/bottom_navigation_view"
                                                                android:layout_height="50dp"
                                                                android:background="@color/whiteish"
                                                                android:elevation="4dp"
                                                                app:layout_constraintBottom_toBottomOf="parent"
                                                                app:menu="@menu/bottom_navigation_menu"
    >

    </com.ittianyu.bottomnavigationviewex.BottomNavigationViewEx>
</androidx.constraintlayout.widget.ConstraintLayout>